<div class="">
  <div class="">
    <label style="color:#ff0000;">电影名称:</label>
    <br>
    《<%= @review.title%>》
    <span>
      <% if current_user && current_user.is_favorites_of?(@review) %>
         <label class="label label-success ">已收藏</label>
      <% else %>
          <label class="label label-warning">未收藏</label>
      <% end %>
    </span>
  </div>
  <div  style="height: 400px;border:1px;border-color:#ff0000">
    <label style="color:#ff0000">电影简介:</label>
    <br>
    <div>
     <%= @review.description%>
    </div>
    <div>
      <label style="color:#ff0000">电影图片:</label>
      <br>
     <%= image_tag @review.avatar.url(:medium)%>
    </div>
  </div>
  <span style="margin-top:800px;">
    <% if current_user && current_user.is_favorites_of?(@review) %>
       <%= link_to("取消收藏",quit_review_path(@review), method: :post, class: "btn btn-default")%>
    <% else %>
        <%= link_to("收藏该电影",join_review_path(@review), method: :post, class: "btn btn-default")%>
    <% end %>
  </span>
  <%= link_to("发表评论", new_review_post_path(@review), class: "btn btn-primary")%>
</div>
<br>
<table class="table">
  <thead>
    <tr>
      <th>评论内容</th>
      <th>评论者</th>
      <th>评论时间</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.comment%></td>
        <td><%= current_user.email%></td>
        <td><%= post.created_at%></td>
      </tr>
    <% end %>
  </tbody>
</table>
